/* Top level definitions							*/

      <statement> ::= <comment>
		    | <question>
		    | <break>
		    | <interface>
		    | <prefix>
		    | <rule>
		    | <switch>
		    | <set>
		    | <show>
		    | <error>


/* Comment definition								*/

	<comment> ::= SCOMMENT


/* ???										*/

       <question> ::= "?"


/* Stop at breakpoiont (for debug only)						*/

	  <break> ::= SBREAK


/* Interface definitions							*/

      <interface> ::= "?"
		    | "interface" <netdevice> <in_ex>

	  <in_ex> ::= "internal"
		    | "external"


/* Set faith/NATPT prefix to the kernel						*/

	 <prefix> ::= "?"
		    | "faith" IPV6ADDR
		    | "faith" IPV6ADDR "/" DECIMAL
		    | "natpt" IPV6ADDR
		    | "natpt" IPV6ADDR "/" DECIMAL


/* Tranlation rule definitions							*/

	   <rule> ::= "?"
		    | "map" "from" <ipv4addr> "to" "faith"
		    | "map" "from" <ipv4ddr> <opt_port> "to"   <ipv6addr> <opt_port>
		    | "map" <dir> "from" <ipv4addr> "to" <ipv6addr> <opt_port>
		    | "map" "from" <ipv6addr> "to" <ipv4addr> <opt_port>
		    | "map" <dir> "from" <ipv6addr> "to" <ipv4addr> <opt_port>
		    | "map" "flush" <opt_type>


	    <dir> ::= "inbound"
		    | "incoming"
		    | "outbound"
		    | "outgoing"


/* Translation on/off switch definition						*/

	  <swich> ::= "map" "enable"
		    | "map" "disable"


/* Set definition								*/

	    <set> ::= "set" "?"
		    | "set" <name> "=" <decimail>
		    | "set" <name> "=" <hexdecimal>


/* Show definitions								*/

	   <show> ::= "?"
		    | "show" "interface" <opt_netdevice>
		    | "show" "prefix"
		    | "show" "static"
		    | "show" "dynamic"
		    | "show" "xlate" <opt_decimal>
		    | "show" "variables"
		    | "show" "mapping"


/* Miscellaneous definitions							*/

  <opt_netdevice> ::= eps
		    | <netdevice>

      <netdevice> ::= STRING
		    | NAME

	 <ipaddr> ::= <ipv4addr>
		    | <ipv6addr>

       <ipv4addr> ::= IPV4ADDR

       <ipv6addr> ::= IPV6ADDR

       <opt_port> ::= eps

       <opt_type> ::= eps
		    | "static"
		    | "dynamic"

    <opt_decimal> ::= eps
		    | DECIMAL
