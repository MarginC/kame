/* Top level definitions							*/

      <statement> ::= <comment>
		    | <question>
		    | <break>
		    | <interface>
		    | <prefix>
		    | <rule>
		    | <switch>
		    | <set>
		    | <show>
		    | <test>
		    | <error>


/* Comment definition								*/

	<comment> ::= SCOMMENT


/* ???										*/

       <question> ::= "?"


/* Stop at breakpoiont (for debug only)						*/

	  <break> ::= SBREAK


/* Interface definitions							*/

      <interface> ::= "interface" "?"
		    | "interface" <netdevice> <in_ex>

	  <in_ex> ::= "internal"
		    | "external"


/* Set faith/NATPT prefix to the kernel						*/

	 <prefix> ::= "prefix" "?"
		    | "faith" IPV6ADDR
		    | "faith" IPV6ADDR "/" DECIMAL
		    | "natpt" IPV6ADDR
		    | "natpt" IPV6ADDR "/" DECIMAL


/* Tranlation rule definitions							*/

	   <rule> ::= "map" "?"
		    | "map" <dir> "from" <ipaddrport> "to" <ipaddrport>
		    | "map" <dir> "from" "any4" "to" <ipaddrport>
		    | "map" <dir> "from" "any6" "to" <ipaddrport>
		    | "map" "from" "any6" "to" "faith"
		    | "map" "from" <ipaddrport> "to" "faith"
		    | "map" "flush" <opt_type>


	    <dir> ::= "inbound"
		    | "incoming"
		    | "outbound"
		    | "outgoing"


/* Translation on/off switch definition						*/

	  <swich> ::= "map" "enable"
		    | "map" "disable"


/* Set definition								*/

	    <set> ::= "set" "?"
		    | "set" <name> "=" <decimail>
		    | "set" <name> "=" <hexdecimal>


/* Show definitions								*/

	   <show> ::= "show" "?"
		    | "show" "interface" <opt_netdevice>
		    | "show" "prefix"
		    | "show" "static"
		    | "show" "dynamic"
		    | "show" "xlate" <opt_long> <opt_decimal>
		    | "show" "variables"
		    | "show" "mapping"


/* Test something								*/

	   <test> ::= "test" "?"
		    | "test" "log"
		    | "test" "log" <name>
		    | "test" "log" <string>


/* Miscellaneous definitions							*/

  <opt_netdevice> ::= eps
		    | <netdevice>

      <netdevice> ::= STRING
		    | NAME

      ipaddrport> ::= <ipv4addrs>
		    | <ipv4addrs> <port>
		    | <ipv6addrs>
		    | <ipv6addrs> <port>

      <ipv4addrs> ::= <ipv4addr>
		    | <ipv4addr> "/" <decimal>
		    | <ipv4addr> "-" <ipv4addr>

      <ipv6addrs> ::= <ipv6addr>
		    | <ipv6addr> "/" <decimal>

       <ipv4addr> ::= IPV4ADDR

       <ipv6addr> ::= IPV6ADDR

	   <name> ::= SNAME

	<decimal> ::= SDECIMAL

     <hexdecimal> ::= SHEXDECIMAL

	   <port> ::= "port" SDECIMAL
		    | "port" SDECIMAL ":" SDECIMAL
		    | "port" SDECIMAL "-" SDECIMAL


/* Optional termila definitions							*/

       <opt_type> ::= eps
		    | "static"
		    | "dynamic"

       <opt_long> ::= eps
		    | "long"

    <opt_decimal> ::= eps
		    | DECIMAL
