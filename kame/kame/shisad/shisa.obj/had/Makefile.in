prefix=	@prefix@
srcdir=	@srcdir@
sysconfdir= @sysconfdir@
localdbdir= @localdbdir@

CFLAGS=	@CFLAGS@ @DEFS@ -DSYSCONFDIR=\"${sysconfdir}\" \
	-DMIP_HA -DMIP_NEMO \
	-I../..
LDFLAGS=@LDFLAGS@
LIBOBJS=@LIBOBJS@
LIBS=	-lcrypto @LIBS@
CC=	@CC@
TARGET=	had

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@
prefix=	@prefix@
exec_prefix=	@exec_prefix@
bindir=	@bindir@
sbindir=@sbindir@
mandir=	@mandir@

GENSRCS=	cfparse.c cftoken.c
OBJS=	had.o binding.o common.o hal.o mh.o nemo_var.o network.o callout.o \
	fdlist.o command.o util.o config.o \
	$(GENSRCS:%.c=%.o)
CLEANFILES+=	cfparse.h

.PATH:	${.CURDIR}/../..

all:	$(TARGET)

had:	$(OBJS) $(LIBOBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBOBJS) $(LIBS)

cfparse.c cfparse.h: ../../cfparse.y
	yacc -d ../../cfparse.y
	mv y.tab.h cfparse.h
	mv y.tab.c cfparse.c

cftoken.c: ../../cftoken.l cfparse.h
	lex ../../cftoken.l
	mv lex.yy.c $@	

install:
	$(INSTALL_PROGRAM) -s -o bin -g bin $(TARGET) $(sbindir)

includes:

clean:
	/bin/rm -f *.o $(TARGET) $(CLEANFILES) $(GENSRCS)

distclean: clean
	/bin/rm -f Makefile config.cache config.log config.status .depend

depend:
	mkdep ${CFLAGS:M-[ID]*} $(srcdir)/*.c
