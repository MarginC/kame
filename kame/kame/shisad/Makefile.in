subdirs=obj/mnd obj/babymdd obj/had obj/cnd obj/mrd obj/nemonetd

prefix=	@prefix@
srcdir=	@srcdir@
sysconfdir= @sysconfdir@
localdbdir= @localdbdir@

CFLAGS=	@CFLAGS@ @DEFS@ -DSYSCONFDIR=\"${sysconfdir}\"
LDFLAGS=@LDFLAGS@
LIBOBJS=@LIBOBJS@
LIBS=	@LIBS@
CC=	@CC@

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@
prefix=	@prefix@
exec_prefix=	@exec_prefix@
bindir=	@bindir@
sbindir=@sbindir@
mandir=	@mandir@

all: build

build: .MAKE
	for d in $(subdirs) ; do \
		if test -d $$d ; then \
			echo "===> Change directory to $$d" ; \
			(cd $$d && $(MAKE)) || exit 1 ; \
		fi ; done

install: .MAKE
	for d in $(subdirs) ; do \
		if test -d $$d ; then \
			echo "===> Change directory to $$d" ; \
			(cd $$d && $(MAKE) install) || exit 1 ; \
		fi ; done
	$(INSTALL_DATA) -o bin -g bin mnd.8 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin cnd.8 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin babymdd.8 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin had.8 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin mrd.8 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin nemonetd.8 $(mandir)/man8

clean: .MAKE
	for d in $(subdirs) ; do \
		if test -d $$d ; then \
			echo "===> Change directory to $$d" ; \
			(cd $$d && $(MAKE) clean) \
		fi ; done

distclean: .MAKE
	for d in $(subdirs) ; do \
		if test -d $$d ; then \
			echo "===> Change directory to $$d" ; \
			(cd $$d && $(MAKE) distclean) \
		fi ; done
	/bin/rm -f Makefile config.cache config.log config.status .depend

.MAKE:
