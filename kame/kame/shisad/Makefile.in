prefix=	@prefix@
srcdir=	@srcdir@
sysconfdir= @sysconfdir@
localdbdir= @localdbdir@

CFLAGS=	@CFLAGS@ @DEFS@ -DSYSCONFDIR=\"${sysconfdir}\"
LDFLAGS=@LDFLAGS@
LIBOBJS=@LIBOBJS@
LIBS=	@LIBS@
CC=	@CC@

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@
prefix=	@prefix@
exec_prefix=	@exec_prefix@
bindir=	@bindir@
sbindir=@sbindir@
mandir=	@mandir@

all:
	cd obj; cd mnd; $(MAKE)
	cd obj; cd cnd; $(MAKE)
	cd obj; cd babymdd; $(MAKE)
	cd obj; cd had; $(MAKE)
	cd obj; cd mrd; $(MAKE)
	cd obj; cd nemonetd; $(MAKE)

install:
	$(INSTALL_DATA) -o bin -g bin mnd.8 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin cnd.8 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin babymdd.8 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin had.8 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin mrd.5 $(mandir)/man8
	$(INSTALL_DATA) -o bin -g bin nemonetd.5 $(mandir)/man8

includes:

clean:
	cd obj; cd mnd; $(MAKE) clean
	cd obj; cd cnd; $(MAKE) clean
	cd obj; cd babymdd; $(MAKE) clean
	cd obj; cd had; $(MAKE) clean
	cd obj; cd mrd; $(MAKE) clean
	cd obj; cd nemonetd; $(MAKE) clean

distclean: clean
	cd obj; cd mnd; $(MAKE) distclean
	cd obj; cd cnd; $(MAKE) distclean
	cd obj; cd babymdd; $(MAKE) distclean
	cd obj; cd had; $(MAKE) distclean
	cd obj; cd mrd; $(MAKE) distclean
	cd obj; cd nemonetd; $(MAKE) distclean
	/bin/rm -f Makefile config.cache config.log config.status .depend

depend:
	mkdep ${CFLAGS:M-[ID]*} $(srcdir)/*.c
